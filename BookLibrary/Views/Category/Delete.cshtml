    @model Category

<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <hr />
            <div class="mb-3 row">
                <label asp-for="Name"  class="control-label"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" />
               
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
        </div>
    </div>



</form>
