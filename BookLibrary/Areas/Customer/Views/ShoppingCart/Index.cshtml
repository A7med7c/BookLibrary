@model ShoppingCartVM

<form method="post" asp-area="Customer" asp-controller="Cart" asp-action="Index">
    <br />
    <div class="card shadow border-0">
        <!-- Header Section -->
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">Shopping Cart</h5>
                </div>
            </div>
        </div>

        <!-- Cart Body Section -->
        <div class="card-body my-4">
            <div class="row">
                <!-- Continue Shopping Button -->
                <div class="col-md-2 offset-md-1">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm">
                        <small>Continue Shopping</small>
                    </a>
                </div>

                <!-- Cart Items -->
                <div class="col-md-10 offset-md-1">
                    @if (Model.ShoppingCartList.Any())
                    {
                        @foreach (var item in Model.ShoppingCartList)
                        {
                            <div class="row border-bottom pb-3">
                                <!-- Product Image -->
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="@(item.Product.ImageUrl ?? "~/images/fallback-image.png")" class="card-img-top rounded w-100" alt="@item.Product.Title" />
                                </div>

                                <!-- Product Details -->
                                <div class="col-12 col-lg-6 pt-md-3">
                                    <h5 class="text-uppercase text-secondary"><strong>@item.Product.Title</strong></h5>
                                    <p><small>@item.Product.Description</small></p>
                                </div>

                                <!-- Quantity and Price -->
                                <div class="col-12 col-lg-5 text-center row">
                                    <div class="col-3 text-md-right pt-2 pt-md-4">
                                        <h6 class="fw-semibold">
                                            @item.Price.ToString("c")
                                            <span class="text-muted">&nbsp;x&nbsp;</span>@item.Quantity
                                        </h6>
                                    </div>

                                    <!-- Quantity Buttons -->
                                    <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                        <div class="w-75 btn-group" role="group">
                                            <a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-outline-primary bg-gradient py-2" aria-label="Increase quantity">
                                                <i class="bi bi-plus-square"></i>
                                            </a>
                                            <a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-outline-primary bg-gradient py-2" aria-label="Decrease quantity">
                                                <i class="bi bi-dash-square"></i>
                                            </a>
                                        </div>
                                    </div>

                                    <!-- Remove Button -->
                                    <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                        <a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger bg-gradient py-2" aria-label="Remove item">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- Empty Cart Message -->
                        <div class="col-12 text-center">
                            <p class="text-muted">Your cart is empty.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Footer Section -->
        <div class="card-footer bg-white border-0">
            <!-- Total Price -->
            <div class="row">
                <div class="col-md-4 offset-md-4">
                    <ul class="list-group mb-4">
                        <li class="d-flex justify-content-between align-items-center">
                            <h5 class="text-dark fw-semibold text-uppercase">Total (USD)</h5>
                            <h4 class="text-dark fw-bolder">@Model.OrderHeader.TotalOrder.ToString("c")</h4>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Summary Button -->
            <div class="row">
                <div class="col-md-2 offset-md-5">
                    <a asp-action="Summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
                </div>
            </div>
        </div>
    </div>
</form>